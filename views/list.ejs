
<%- include("header") -%>

  <div class="box" id="heading">
    <h1> <%= ListTitle %></h1>
  </div>
  <div class="box">

    <% for(var i=0;i<TASKS.length;i++) {  %>
    <div class="item">
      <input type="checkbox">
      <p> <%= TASKS[i] %> </p>
    </div>
    <% } %>

    <form class="item" action="/" method='POST'>

      <input id="newTask" type="text" name="newTask" value="" placeholder="New Item" autocomplete="off">
      <button type="submit" class="add" name="list" value= <%= ListTitle %> >+</button>

    </form>

    <form action="/" class="reset-form" method="POST">

    <button type="submit" class="reset" name="resetButton" value = 'reset' >Reset List</button>

    </form>
  </div>

<%- include('footer') -%>
